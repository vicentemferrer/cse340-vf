<h1><%- title %></h1>
<section class="messages">
    <%- messages() %>
        <% if (errors) { %>
            <ul class="notice">
                <% errors.array().forEach(error=> { %>
                    <li>
                        <%= error.msg %>
                    </li>
                    <% }) %>
            </ul>
            <% } %>
</section>
<form action="/account/login" method="post" id="loginForm">
    <label>Email* <input type="email" name="account_email" id="account_email" required autofocus></label>
    <label>Password*
        <input type="password" name="account_password" id="account_password" required
            pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$">
        <i class="fi fi-br-eye"></i>
        <span>(Passwords must be at least 12 characters and contain at least 1 number, 1 capital letter and 1 special
            character)</span>
    </label>
    <button class="dark">Login</button>

    <p>No account? <a href="/account/registration">Sign-up</a></p>
</form>

<script type="module" src="../../js/showPassword.js"></script>