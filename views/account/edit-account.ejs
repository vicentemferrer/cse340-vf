<h1><%- title %></h1>
<section class="messages">
    <%- messages() %>
        <% if (errors) { %>
            <ul class="notice">
                <% errors.array().forEach(error=> { %>
                    <li>
                        <%= error.msg %>
                    </li>
                    <% }) %>
            </ul>
            <% } %>
</section>
<section class="pairing">
    <form action="/account/update-account" method="post">
        <h2>Account Information</h2>
        <label>First name* <input type="text" name="account_firstname" id="account_firstname" required
                value="<%= locals.account_firstname %>" autofocus></label>
        <label>Last name* <input type="text" name="account_lastname" id="account_lastname" required
                value="<%= locals.account_lastname %>"></label>
        <label>Email address* <input type="email" name="account_email" id="account_email" required
                value="<%= locals.account_email %>"></label>

        <button class="dark">Save Changes</button>
        <input type="hidden" name="account_id" <% if(locals.account_id) { %> value="<%= locals.account_id %>" <% } %>>
    </form>
    <form action="/account/change-password" method="post">
        <h2>Change Password</h2>
        <label>New Password*
            <input type="password" name="account_password" id="account_password" required
                pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$">
            <i class="fi fi-br-eye"></i>
            <span>(Passwords must be at least 12 characters and contain at least 1 number, 1 capital letter and 1
                special character)</span>
        </label>

        <button class="dark">Change Password</button>
        <input type="hidden" name="account_id" <% if(locals.account_id) { %> value="<%= locals.account_id %>" <% } %>>
    </form>
</section>

<script type="module" src="../../js/showPassword.js"></script>