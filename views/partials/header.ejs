<header id="top-header">
    <span class="siteName">
        <a href="/" title="Return to home page">CSE Motors</a>
    </span>
    <div id="tools" class="<%- locals.loggedin ? 'logged' : '' %>">
        <% if (!locals.loggedin) { %>
            <a title="Click to log in" href="/account/login">My Account</a>
            <% } else { %>
                <h4>Welcome, <%- locals.accountData.account_firstname %></h4>
                <% if (locals.accountData['account_type'] !=='Client' ) { %>
                    <a title="Click to manage inventory" href="/inv">Inventory Management</a>
                    <% } %>
                        <a title="Click to log out" href="/account/logout">Logout</a>
                        <% } %>
    </div>
</header>